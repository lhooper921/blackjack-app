

{{> header}}




    <!-- Cards Background image -->
<div class="container-fluid" id="index-page">
    <img src="../public/images/cards.jpg" class="img-fluid " id="index-background">
       <!-- Logo -->
       <div class="row">
      <div class="xs-col-2 md-col-8" id="logo">
        <img src="/public/images/blackjack_logo.png"  alt="" loading="lazy">
            </div>
            </div>

            <div class="row">
                <div class="hero-account col-5 text-center mt-5">
                    <h1>Your Account Info</h1>
                    <div class="container ">

                        <h3><b>First Name:</b> {{this.firstName}}   Last Name: {{this.lastName}}</h3>
                        <h3></h3>
                        <h3>User Name: {{this.userName}}</h3>
                        <h3>Email: {{this.email}}</h3>

                    </div>
                </div>
            </div>



            <div class="hero-account-update col-4 text-center mt-5">
                <div class="container">

                    <form>
                        <h1>Update Info</h1>
                        <div class="row">
                            <div class="col">

                                <input type="text" class="form-control" placeholder="First name">
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Last name">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="inputEmail4">Email</label>
                                <input type="email" class="form-control" id="inputEmail4"
                                    placeholder="name@example.com">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Username</label>
                                <input type="password" class="form-control" id="inputPassword4"
                                    placeholder="Will appear on leaderboard">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Password</label>
                                <input type="password" class="form-control" id="inputPassword4"
                                    placeholder="Must be 8-12 characters">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Update Account</button>
                    </form>
                    
                </div>

            </div>

        </div>

    </div>



    </div>
    </div>
    {{> footer}}
